{{#ifShortVideo this}}
  {{#tile class="swiper-slide"}}
    <div class="tile" aria-label="Short video tile">
      <div class="icon-section hidden" aria-label="Content indicators">
        <div class="top-section">
          {{#each attrs}}
            {{#ifequals this "instagram.reel"}}
              <div class="content-icon icon-reel" aria-label="Instagram Reel content"></div>
            {{/ifequals}}
            {{#ifequals this "youtube.short"}}
              <div class="content-icon icon-youtube-short" aria-label="YouTube Shorts content"></div>
            {{/ifequals}}
          {{/each}}
          {{#ifHasProductTags this}}
            <div class="shopping-icon icon-products" aria-label="Shoppable content"></div>
          {{/ifHasProductTags}}
        </div>
        <div class="center-section">
          <div class="icon-play" aria-label="Play video"></div>
        </div>
        <div class="bottom-section">
          <tile-tags widgetId="{{options.wid}}" tile-id="{{id}}" variant="dark" mode="swiper" context="shortvideo-inline" aria-label="Content tags"></tile-tags>
        </div>
      </div>
      <div class="tile-image-wrapper" aria-label="Video media container">
        <shopspot-icon tile-id="{{id}}" widgetId="{{options.wid}}" aria-label="Shopping options"></shopspot-icon>
        {{playVideo this "100%" "100%"}}
        <div class="swiper-lazy-preloader"></div>
      </div>
    </div>
  {{/tile}}
{{/ifShortVideo}}
