{{#tile class="ugc-tile-wrapper" }}
<div class="image-section">
    <div class="center-section">
        {{#ifequals media "video"}}
            <div class="icon-play" aria-label="Play video"></div>
        {{/ifequals}}
    </div>
    {{#if options.config.tile_options.show_shopspots}}
    <shopspot-icon tile-id="{{id}}" aria-label="Shopping options"></shopspot-icon>
    {{/if}}
    {{#ifAutoPlayVideo media options.config.tile_options.auto_play_video }}
      {{playVideo this "100%" "100%"}}
    {{else}}
      {{#lazy image_thumbnail_url "120"}}{{/lazy}}
    {{/ifAutoPlayVideo}}
</div>
<div class="details-section" aria-label="Content details">
    <div class="tile-message-wrapper">
        <tile-content tileId="{{id}}" mode="dark" context="slider-inline" render-timephrase="false"
            render-avatar-image="false" trim-description="true" aria-label="Content summary"></tile-content>
        <div class="tile">
            <tile-tags widgetId="{{options.wid}}" tile-id="{{id}}" mode="swiper" context="slider-inline" navigation-arrows="true"
                prev-icon="icon-prev-white" next-icon="icon-next-white" aria-label="Content tags"></tile-tags>
        </div>
        <div class="footer" aria-label="Content meta">
            <time-phrase widgetId="{{options.wid}}" source-created-at="{{source_created_at}}" aria-label="Content time"></time-phrase>
            <share-menu widgetId="{{options.wid}}" tile-id="{{id}}" aria-label="Share menu"></share-menu>
        </div>
    </div>
</div>
<div class="icon-section" aria-label="Content indicators">
    {{#each attrs}}
    {{#ifequals this "instagram.reel"}}
    <div class="content-icon icon-reel" aria-label="Instagram Reel content"></div>
    {{/ifequals}}
    {{#ifequals this "youtube.short"}}
    <div class="content-icon icon-youtube-short" aria-label="YouTube Shorts content"></div>
    {{/ifequals}}
    {{/each}}
    <div class="network-icon icon-{{source}}" aria-label="Content from {{source}}"></div>
    {{#ifHasProductTags this}}
    <div class="shopping-icon icon-products" aria-label="Shoppable content"></div>
    {{/ifHasProductTags}}
</div>
{{/tile}}
