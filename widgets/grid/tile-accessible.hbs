{{#tile class="grid-item"}}
  {{#ifAutoPlayVideo media options.config.tile_options.auto_play_video }}
    <article class="tile" 
             role="article" 
             tabindex="0"
             aria-label="{{#if name}}{{name}}{{else}}User generated video content{{/if}}"
             aria-describedby="tile-{{id}}-description">
      {{playVideo this "100%" "100%"}}
      
      <!-- Hidden description for screen readers -->
      <div id="tile-{{id}}-description" class="sr-only">
        Auto-playing video content from {{source}}{{#if description}}: {{description}}{{/if}}
        {{#ifHasProductTags this}}. Contains shoppable products.{{/ifHasProductTags}}
      </div>
    </article>
  {{else}}
    <article class="tile" 
             data-background-image="{{image}}"
             role="article" 
             tabindex="0"
             aria-label="{{#if name}}{{name}}{{else}}User generated content{{/if}}"
             aria-describedby="tile-{{id}}-description">
      
      <img style="display: none;" 
           src="{{image}}" 
           alt="{{#if description}}{{description}}{{else if name}}{{name}}{{else}}User generated content from {{source}}{{/if}}" />
      
      <div class="icon-section" aria-hidden="true">
        <div class="top-section">
          {{#each attrs}}
            {{#ifequals this "instagram.reel"}}
              <div class="content-icon icon-reel" 
                   role="img" 
                   aria-label="Instagram Reel content"></div>
            {{/ifequals}}
          {{/each}}
          {{#ifHasProductTags this}}
            <div class="shopping-icon icon-products" 
                 role="img" 
                 aria-label="Shoppable content"></div>
          {{/ifHasProductTags}}
        </div>
        
        <div class="center-section">
          {{#ifequals media "video"}}
            <button class="icon-play video-play-button" 
                    type="button"
                    aria-label="Play video: {{#if name}}{{name}}{{else}}User generated content{{/if}}"
                    tabindex="0">
              <span class="sr-only">Play video</span>
            </button>
          {{/ifequals}}
        </div>
        
        <div class="bottom-section">
          <tile-tags widgetId="{{options.wid}}" 
                     tile-id="{{id}}" 
                     variant="dark" 
                     mode="swiper" 
                     context="grid-inline"
                     aria-label="Content tags"></tile-tags>
          <div class="network-icon icon-{{source}}" 
               role="img" 
               aria-label="Content from {{source}}"></div>
        </div>

        <shopspot-icon widgetId="{{options.wid}}" 
                       tile-id={{id}}
                       aria-label="Shopping options" />
      </div>
      
      <!-- Hidden description for screen readers -->
      <div id="tile-{{id}}-description" class="sr-only">
        Content from {{source}}{{#if description}}: {{description}}{{/if}}
        {{#ifequals media "video"}}. Video content.{{/ifequals}}
        {{#ifHasProductTags this}}. Contains shoppable products.{{/ifHasProductTags}}
      </div>
    </article>
  {{/ifAutoPlayVideo}}
{{/tile}}