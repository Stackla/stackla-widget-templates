{
  "name": "@stackla/widget-templates",
  "version": "0.0.1",
  "description": "Widget Templates",
  "workspaces": [
    "packages/widget-utils"
  ],
  "scripts": {
    "eslint": "eslint . --ext .ts,.tsx",
    "typecheck": "npx tsc",
    "prettier": "prettier '**/*.{js,ts}' --write",
    "stylelint": "stylelint **/*.scss",
    "lint": "npm run eslint && npm run stylelint",
    "lint:fix": "npm run eslint -- --fix && npm run stylelint -- --fix",
    "test": "vitest run --passWithNoTests",
    "test:e2e:pipeline": "APP_ENV=pipeline playwright test --shard=$SHARD/3",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --debug",
    "pw:run": "playwright test",
    "test:playwright": "playwright test",
    "test:playwright:debug": "playwright test --ui",
    "watch:test": "APP_ENV=testing node ./esbuild.js --watch",
    "start:test": "APP_ENV=testing npx concurrently \"npm run watch:test\" \"npm run server:test\"",
    "test:build": "APP_ENV=testing node ./esbuild.js",
    "build": "APP_ENV=production node ./build.js",
    "build:all": "APP_ENV=production node ./build.js",
    "build:production": "APP_ENV=production node ./esbuild.js",
    "build:staging": "APP_ENV=staging node ./esbuild.js",
    "build:development": "APP_ENV=development node ./esbuild.js",
    "build:pipeline": "APP_ENV=pipeline node ./esbuild.js",
    "watch": "APP_ENV=development node ./esbuild.js --watch",
    "dev": "APP_ENV=development node ./esbuild.js",
    "server": "NODE_ENV=development APP_ENV=development node ./dev-server.js",
    "server:test": "NODE_ENV=development APP_ENV=testing node ./dev-server.js",
    "server:pipeline": "NODE_ENV=development APP_ENV=pipeline node ./dev-server.js",
    "start": "APP_ENV=development npx concurrently \"npm run watch\" \"npm run server\"",
    "build:utils": "cd packages/widget-utils && npm run build",
    "build:utils:dev": "cd packages/widget-utils && npm run build:dev"
  },
  "license": "MIT",
  "optionalDependencies": {
    "@esbuild/linux-x64": "^0.23.1",
    "@swc/core": "^1.13.5",
    "@swc/core-darwin-arm64": "^1.13.20",
    "@swc/core-darwin-x64": "^1.13.20",
    "@swc/core-linux-arm-gnueabihf": "^1.13.20",
    "@swc/core-linux-arm64-gnu": "^1.13.20",
    "@swc/core-linux-arm64-musl": "^1.13.20",
    "@swc/core-linux-x64-gnu": "^1.13.20",
    "@swc/core-linux-x64-musl": "^1.13.20",
    "@swc/core-win32-arm64-msvc": "^1.13.20",
    "@swc/core-win32-ia32-msvc": "^1.13.20",
    "@swc/core-win32-x64-msvc": "^1.13.20",
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "@happy-dom/jest-environment": "^18.0.1",
    "@playwright/test": "^1.55.1",
    "@stackla/eslint-config": "^1.0.0",
    "@stackla/handlebars": "^0.1.10",
    "@stackla/jest-config": "^1.0.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^5.0.0",
    "@types/glidejs__glide": "^3.6.5",
    "@types/jest": "^29.5.13",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "chokidar": "^4.0.1",
    "concurrently": "^9.2.0",
    "dotenv": "^16.4.5",
    "esbuild": "^0.24.2",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^8.56.0x",
    "eslint-config-stylelint": "^21.0.0",
    "eslint-plugin-css": "^0.9.2",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-promise": "^6.2.0",
    "glob": "^11.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jiti": "^2.6.0",
    "nock": "^14.0.10",
    "playwright": "^1.55.0",
    "postcss": "^8.4.49",
    "postcss-sass": "^0.5.0",
    "postcss-url": "^10.1.3",
    "sass": "^1.78.0",
    "start-server-and-test": "^2.0.12",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-prettier": "^5.0.0",
    "stylelint-scss": "^6.5.0",
    "svg-sprite": "^2.0.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@stackla/widget-utils": "workspace:*",
    "apicache": "^1.6.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "happy-dom": "^14.12.3",
    "hbs": "^4.2.0"
  }
}
