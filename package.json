{
  "name": "@stackla/widget-templates",
  "version": "0.0.1",
  "description": "Widget Templates",
  "scripts": {
    "lint": "eslint . --fix && stylelint '**/*.css'",
    "test": "jest --color --passWithNoTests",
    "build": "tsc -p tsconfig.json",
    "prepare": "husky install"
  },
  "license": "MIT",
  "devDependencies": {
    "@stackla/eslint-config": "^1.0.0",
    "@stackla/jest-config": "^1.0.6",
    "@stackla/types": "^0.0.13",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "eslint": "^8.56.0",
    "eslint-config-stylelint": "^21.0.0",
    "eslint-plugin-css": "^0.9.2",
    "eslint-plugin-promise": "^6.2.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-prettier": "^5.0.0",
    "typescript": "^5.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  }
}
