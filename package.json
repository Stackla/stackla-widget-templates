{
  "name": "@stackla/widget-templates",
  "version": "0.0.1",
  "description": "Widget Templates",
  "workspaces": [
    "packages/widget-utils"
  ],
  "scripts": {
    "eslint": "eslint . --ext .ts,.tsx",
    "typecheck": "npx tsc",
    "prettier": "prettier '**/*.{js,ts}' --write",
    "stylelint": "stylelint **/*.scss",
    "lint": "npm run eslint && npm run stylelint",
    "lint:fix": "npm run eslint -- --fix && npm run stylelint -- --fix",
    "test": "jest --passWithNoTests",
    "cy:debug": "cypress open",
    "debug:e2e": "start-server-and-test --expect 400 start:test http://localhost:4002/preview cy:debug",
    "cy:run:regression": "VISUAL_REGRESSION_TYPE=regression cypress run --browser chrome --headless",
    "cy:run:generate": "VISUAL_REGRESSION_TYPE=base cypress run --browser chrome --headless",
    "test:e2e:base": "start-server-and-test --expect 400 start:test http://localhost:4002/preview cy:run:base",
    "test:e2e": "start-server-and-test --expect 400 start:test http://localhost:4002/preview cy:run:regression",
    "watch:test": "APP_ENV=testing node ./esbuild.js --watch",
    "start:test": "APP_ENV=testing npx concurrently \"npm run watch:test\" \"npm run start:lambda:test\"",
    "test:build": "APP_ENV=testing node ./esbuild.js",
    "build": "APP_ENV=production node ./esbuild.js",
    "build:production": "APP_ENV=production node ./esbuild.js",
    "build:staging": "APP_ENV=staging node ./esbuild.js",
    "build:development": "APP_ENV=development node ./esbuild.js",
    "watch": "APP_ENV=development node ./esbuild.js --watch",
    "dev": "APP_ENV=development node ./esbuild.js",
    "start:lambda:test": "NODE_ENV=development APP_ENV=testing sls offline start --noPrependStageInUrl --reloadHandler --stage=development --region=us-west-1 --host=127.0.0.1",
    "start:lambda": "NODE_ENV=development sls offline start --noPrependStageInUrl --reloadHandler --stage=development --region=us-west-1 --host=127.0.0.1",
    "start": "APP_ENV=development npx concurrently \"npm run watch\" \"npm run start:lambda\"",
    "build:utils": "cd packages/widget-utils && npm run build"
  },
  "license": "MIT",
  "optionalDependencies": {
    "@esbuild/linux-x64": "^0.23.1"
  },
  "devDependencies": {
    "@happy-dom/jest-environment": "^15.0.0",
    "@stackla/base-serverless": "^2.0.9",
    "@stackla/eslint-config": "^1.0.0",
    "@stackla/jest-config": "^1.0.6",
    "@stackla/lambda-api-bootstrap": "^1.0.12",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^5.0.0",
    "@types/glidejs__glide": "^3.6.5",
    "@types/jest": "^29.5.13",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "chokidar": "^4.0.1",
    "concurrently": "^9.0.1",
    "copy-webpack-plugin": "^12.0.2",
    "cypress": "^13.13.2",
    "cypress-split": "^1.24.5",
    "cypress-visual-regression": "^5.2.2",
    "dotenv": "^16.4.5",
    "esbuild": "^0.20.2",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^8.56.0x",
    "eslint-config-stylelint": "^21.0.0",
    "eslint-plugin-css": "^0.9.2",
    "eslint-plugin-cypress": "^3.5.0",
    "eslint-plugin-promise": "^6.2.0",
    "glob": "^11.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jiti": "^1.21.6",
    "nock": "^13.5.5",
    "sass": "^1.78.0",
    "serverless": "^3.38.0",
    "serverless-api-gateway-caching": "^1.10.4",
    "serverless-scriptable-plugin": "^1.3.1",
    "serverless-webpack": "^5.14.1",
    "start-server-and-test": "^2.0.8",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-prettier": "^5.0.0",
    "stylelint-scss": "^6.5.0",
    "swc-loader": "^0.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0"
  },
  "dependencies": {
    "@appnest/masonry-layout": "^2.2.3",
    "@glidejs/glide": "^3.6.1",
    "@stackla/handlebars": "^0.1.4-20241119053720",
    "@stackla/widget-utils": "workspace:*",
    "cookie-parser": "^1.4.6",
    "happy-dom": "^14.12.3",
    "hbs": "^4.2.0",
    "serverless-hooks-plugin": "^1.1.0",
    "serverless-http": "^3.2.0",
    "swiper": "^11.1.14"
  }
}
