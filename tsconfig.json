{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es2019",
      "es2021",
      "DOM",
      "DOM.Iterable",
      "dom"
    ],
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "inlineSources": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "jsxFactory": "createElement",
    "jsxFragmentFactory": "createFragment",
    "paths": {
        "@styles/*": ["./widgets/styles/*"],
        "@utils/*": ["./widgets/utils/*"],
        "@widgets/*": ["./widgets/*"]
      }
  },
  "include": ["widgets/**/*.ts", "widgets/**/*.tsx", "./node_modules/@stackla/ugc-widgets/src/ui/core/utils/jsx-html.ts"]
}
